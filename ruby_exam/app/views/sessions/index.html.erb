
<% content_for :left_column do %>
<h1>WELCOME!</h1>
<hr>
<h2>Register</h2>
<form action='/users' method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
        <label for="name">First Name:</label>
        <input type="text" id='name' class="form-control" name="user[name]">
    </div>
    <div class="form-group">
        <label for="alias">Alias:</label>
        <input type="text" id="alias" class="form-control" name="user[alias]">
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" id="email" class="form-control" name="user[email]">
    </div>
    <div class="form-group">
        <label for='passowrd'>Password:</label>
        <input type="password" id="password" class="form-control" name="user[password]">
    </div>
    <div class="form-group">
        <label for="password_confirmation">Password Confirmation:</label>
        <input type="password" id="password_confirmation" class="form-control" name="user[password_confirmation]">
    </div><br>
    <input type="submit" class="btn btn-primary" value="Register">
</form>


<% if flash[:errors] %>
    <% flash[:errors].each do |msg|%>
        <div id="errors" class="alert alert-danger" role="alert">
            <ul>
                <li><%= msg %></li>
            </ul>
        </div>
    <%end%>
<%end%>


<% end %>

<% content_for :right_column do %>
    <h1>Already Registerd? </h1>
    <hr>
    <h2>Login</h2>
    <form action="/sessions" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" id="email" class="form-control" name="user[email]">
        </div>
        <div class="form-group">
            <label for='passowrd'>Password:</label>
            <input type="password" id="password" class="form-control" name="user[password]">
        </div>
        <input type="submit" class="btn btn-primary" value="Login">
    </form>

    <% if flash[:login_errors] %>
        <div id="login_errors" class="alert alert-danger" role="alert">
            <ul>
                <li><%= flash[:login_errors] %></li>
            </ul>
        </div>
    <% end %>


<% end %>
