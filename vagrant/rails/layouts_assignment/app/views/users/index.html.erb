<% content_for :left_column do %>
<h1>All Users</h1>
<table class="table table-striped">
    <tbody>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.favorite_language %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<% end %>

<% content_for :right_column do %>
<h1>New User</h1>
<form action="/users" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
        <label for="first_name">First Name</label>
        <input type="text" class="form-control" name="user[first_name]" placeholder="Enter Your First Name">
    </div>
    <div class="form-group">
        <label for="last_name">Last Name</label>
        <input type="text" class="form-control" name="user[last_name]" placeholder="Enter Your Last Name">
    </div>
    <div class="form-group">
        <label class="form-group" name="favorite_language">Favorite Language</label>
        <input type="text" class="form-control" name="user[favorite_language]" placeholder="Enter Your Favorite Language">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button><br><br>
    <a href="/posts" class="btn btn-info">All Posts</a>
</form>
<% end %>
