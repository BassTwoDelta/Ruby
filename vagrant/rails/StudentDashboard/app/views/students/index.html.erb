<div class="container">
    <h1>Showing <%= @students.count %> students for <%= @dojo.branch %></h1>
    <hr>
    <table class="table table-striped">
        <tbody>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th> 
            <th>Action</th>
            <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><a href="/dojos/<%=@dojo.id %>/students/<%= student.id %>">Show</a> | <a href="dojos/<%= @dojo.id %>/students/<%=student.id%>/edit">Edit</a> | <%= link_to "Destroy", destroy_student_path(student), :method => :delete %></td>
            </tr>
            <% end %>
        </tbody>
    </table><hr>
</div>