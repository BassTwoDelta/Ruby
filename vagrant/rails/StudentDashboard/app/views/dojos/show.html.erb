<div class="container">
    <h1><%= @dojo.branch %></h1><hr>
    <h4>Address: <%= @dojo.street %></h4>
    <h4>City: <%= @dojo.city %>, State: <%= @dojo.state %></h4>
    <hr>
    <table class="table table-striped">
        <tbody>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th> 
            <th>Action</th>
            <% @student.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> | <a href="dojos/<%=student.id%>/edit">Edit</a> | <%= link_to "Destroy", destroy_student_path(student), :method => :delete %></td>
            </tr>
            <% end %>
        </tbody>
    </table><hr>
    <p><a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>/edit">Edit</a> | <a href="/dojos/<%= @dojo.id %>/students">Show Student Info Only</a> | <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a></p>
</div>